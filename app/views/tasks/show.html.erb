<% if logged_in? %>

<header class="mb-4">
  <nav class="navbar navbar-dark bg-dark">
    <div class="justify-content-end">
    <a class="navbar-brand" href="#">created task</a>
    </div>
  </nav>
</header>

<div class="container-fluid">
<table class="table table-striped" >
  <thead>
    <tr>
      <th>task</th>
      <th>status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @task.content %></td>
      <td><%= @task.status %></td>
    </tr>
  </tbody>
</table>
</div>


<div class="container-fluid">
  <div class='mt-2 mb-2'>
    <%= link_to 'back to list', tasks_path, class: 'btn btn-primary' %>
  </div>
  <div class='mt-2 mb-2'>
    <%= link_to 'edit task', edit_task_path(@task), class: 'btn btn-primary' %>
  </div>
  <div class='mt-2 mb-2'>
    <%= link_to 'delete task', @task, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure to deleteï¼Ÿ' } %>
  </div>
</div>

<% else %>
<% end %>
