<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row ml-2 mr-2">
    <div class="col-md-6">
        <div class="form-group">
          <%= f.label :content, 'task' %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :status, 'status' %>
          <%= f.select :status, [["1 - danger", "1"], ["2 - not bad", "2"],["3 - ok", "3"]], class: 'form-control' %>
        </div>
          <%= f.submit 'task投稿', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>